#ifndef _PAGEKITEC_DLL_H
#define _PAGEKITEC_DLL_H

#ifdef ANDROID
#define PK_VERSION "0.90.@DATE@A"
#else
#ifdef _MSC_VER
#define PK_VERSION "0.90.@DATE@W"
#else
#define PK_VERSION "0.90.@DATE@C"
#endif
